module

using std:Console


main(io: Console!) =
	do
		io = say_hello(io)
		io = count_to_ten(io)
	end


say_hello(io: Console!) -> Console! =
	do
		io = io.print "Welcome,"
			.print "Please enter your name: "
		(io, name) = io.input
		io.print "Hello, {name}!"
	end


count_to_ten(io: Console!) -> Console! =
	do
		(1 to 11)
			.fold(io, (n, io) -> io.print "{n}")
	end

-- or:

count_to_ten(io: Console!) -> Console! =
	do
		(1 to 11)
			.print_each(io, n -> "{n}")
	end

