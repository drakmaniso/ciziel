fun example-3(numbers: Array[String]) -> Int | None =
	numbers.at(0)?.to-Int?.abs


fun example-3-desugared(numbers: Array[String]) -> Int | None =
	case numbers.at(0)
	of Ok(s) then
		case s.to-Int
		of Ok(n) then n.abs
		of e then e
		end
	of e then e
	end


