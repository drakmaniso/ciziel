fun example-3(numbers: Array[String]) -> Int | None =
	math::abs(Int.parse(numbers[0]?)?)


fun example-3-desugared(numbers: Array[String]) -> Int | None =
	case numbers[0]
	of Ok(s) then
		case Int.parse(s)
		of Ok(n) then math::abs(n)
		of e then e
		end
	of e then e
	end


