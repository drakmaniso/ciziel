module advanced


use basic (Expr, #eval)


def Expr = union {
    ...

    def Negation {
        data subexpr: *Expr
    }
}


def (Negation[#eval]).eval -> Int {
    - self.subexpr.eval
}


def #pretty = trait {
	has (Self).pretty -> String
}


