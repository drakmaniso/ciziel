module main


use basic (#eval)
use advanced (Expr, Addition, Literal, Negation, #pretty)


def main() -> Io[] {
	let e1 = Addition(Literal(77), Negation(Literal(12)))
	Io.print("{e1.pretty} = {e1.eval}")
}
